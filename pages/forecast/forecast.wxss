/* pages/forecast/forecast.wxss */
.forecast-container{
  width: 100%;
  height: 100%;
}
.title{
  font-size: 40rpx;
  text-align: center;
  padding: 20rpx 0 40rpx;
}
.scroll-container{
  width: 100%;
  height: 400px;
  overflow: hidden;
  white-space: nowrap;
}
.item-col{
  display: inline-block;
  width: 150rpx;
  height: auto;
  padding: 0 8rpx;
  text-align: center;
}
.item-col+.item-col{
  border-left: 1px solid #eeeeee;
}
.item-col image{
  width: 70rpx;
  height: 70rpx;
}
.date{
  font-size: 28rpx;
  color: #555555;
  margin-bottom: 50rpx;
}
.txt{
  font-size: 30rpx;
}
.txt_n{
  margin-bottom: 50rpx;
}
.tmp{
  font-size: 32rpx;
  margin: 120rpx 0;
}
.wind_dir{
  font-size: 30rpx;
  color: #555555;
}
.wind_sc{
  font-size: 28rpx;
  color: #777777;
}
.motto{
  position: absolute;
  bottom: 0;
}